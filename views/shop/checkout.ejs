<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/cart.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
                <ul class="cart__item-list">
                    <% products.forEach(p => { %>
                     	   <li class="cart__item">
                            <h1><%= p.productId.title %></h1>
                            <h2>Quantity: <%= p.quantity %></h2>
												</li>
										<% }) %>
								</ul>
								<hr>
								<div class=" center">
										<h2>Total Amount : &#x20b9 <%= totalPrice %> </h2>
								</div>
								<div class=" center">
										<button id = 'order-btn' class="order-btn">ORDER</button>
								</div>
 								<script src="https://js.stripe.com/v3/"></script>
                <script>
                    var stripe = Stripe('pk_test_51Ig2XqSG6tsYy3b5YJKPDeHD86BV6BS9OhrXp9CaPW56h2fMu3bFAb32yCELmsh395UKFcclMUilVbYkDI0kJcCm00cwBGCnwL');
                    var orderBtn = document.getElementById('order-btn');
                    orderBtn.addEventListener('click', function() {
                        stripe.redirectToCheckout({
                            sessionId: '<%= sessionId %>'
                        });
                    });
                </script>
							</main>

				<%- include('../includes/end.ejs') %>  
				<script src="/js/admin.js"></script>